require 'package'

class GnuTILS < Package
  version '3.4.4.1'
  source_url 'ftp://ftp.gnutls.org/gcrypt/gnutls/v3.4/gnutls-3.4.4.1.tar.xz'
  source_sha1 '474efaba6fd6c6c6c0ebac2a3f431946'
  
  def self.build
    system "sudo ./configure --prefix=/usr \
            --with-default-trust-store-file=/etc/ssl/ca-bundle.crt"
    system "sudo make"
  end
  
  def self.install
    system "sudo make install"
  end
end
