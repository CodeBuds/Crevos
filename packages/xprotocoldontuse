require 'package'

class Xprotocol < Package
  version '0.1.1'
  source_url 'ftp://ftp.x.org/pub/individual/proto/'
  source_sha1 '1a05fb01fa1d5198894c931cf925c025'

  depends_on 'buildessential'
  depends_on 'gtk'
  depends_on 'pkgconfig'

  def self.build
    system "./configure"
    system "make"
  end

  def self.install
    system "make", "DESTDIR=#{CREW_DEST_DIR}", "install"
  end
end
